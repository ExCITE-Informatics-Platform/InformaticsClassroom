# Flask Configuration
FLASK_SECRET_KEY=your-secret-key-here
FLASK_DEBUG=False
FLASK_TESTING=False

# Azure AD / MSAL Configuration
AZURE_CLIENT_ID=your-client-id-here
AZURE_CLIENT_SECRET=your-client-secret-here
AZURE_AUTHORITY=https://login.microsoftonline.com/common
AZURE_REDIRECT_PATH=/getAToken
AZURE_AUTH_DOMAIN=jh

# Azure Cosmos DB Configuration
COSMOS_URL=your-cosmos-url-here
COSMOS_KEY=your-cosmos-key-here
COSMOS_DATABASE_PROD=bids-class
COSMOS_DATABASE_DEV=bids-class-dev

# Azure Table Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_KEY=your-storage-key-here

# Azure Blob Storage Configuration
AZURE_BLOB_CONTAINER_NAME=figures
AZURE_BLOB_CONNECT_STR=your-blob-connection-string-here

# Microsoft Graph API Configuration
AZURE_GRAPH_ENDPOINT=https://graph.microsoft.com/v1.0/users
AZURE_GRAPH_SCOPE=User.ReadBasic.All

# ========== REACT SPA MIGRATION CONFIGURATION ==========

# Feature flag: Enable React UI (true) or Flask templates (false)
USE_REACT_UI=true

# Role-based rollout mode
# Options: 'admins' (admins only), 'instructors' (admins + instructors), 'all' (everyone)
REACT_ROLLOUT_MODE=admins

# JWT Token Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here  # If not set, uses FLASK_SECRET_KEY
JWT_ACCESS_TOKEN_EXPIRES=3600  # Access token expires in 1 hour (seconds)
JWT_REFRESH_TOKEN_EXPIRES=2592000  # Refresh token expires in 30 days (seconds)

# ========== DATABASE CONFIGURATION ==========

# Database type: 'cosmos' for Azure Cosmos DB, 'postgresql' for PostgreSQL
DATABASE_TYPE=postgresql

# PostgreSQL Configuration (for local dev or Azure Database for PostgreSQL)
POSTGRES_HOST=your-server.postgres.database.azure.com
POSTGRES_PORT=5432
POSTGRES_USER=your-admin-user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=informatics_classroom

# For Azure PostgreSQL: Enable SSL
POSTGRES_SSLMODE=require
